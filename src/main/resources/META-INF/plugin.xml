<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>fr.azerks.HytaleUI</id>
    <name>UI File Support for Hytale</name>
    <vendor>LÃ©o Gallois</vendor>

    <description><![CDATA[
        <p>Provides comprehensive support for Hytale UI (.ui) files in IntelliJ-based IDEs.</p>
        <h3>Features:</h3>
        <ul>
            <li><b>Syntax Highlighting:</b> Color-coded keywords, properties, strings, numbers, and comments</li>
            <li><b>Code Completion:</b> Auto-complete for UI components, properties, and values</li>
            <li><b>Code Formatting:</b> Automatic indentation and code formatting</li>
            <li><b>Error Detection:</b> Real-time validation and error highlighting (Work in progress)</li>
            <li><b>Auto-closing:</b> Automatic closing of brackets, braces, and quotes</li>
        </ul>
        <h3>Coming Soon:</h3>
        <ul>
            <li><b>Reference Resolution:</b> Navigate between imports and variable declarations</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- UI File Type Support -->
        <fileType name="UI File"
                  implementationClass="org.jetbrains.plugins.template.ui.UiFileType"
                  fieldName="INSTANCE"
                  language="UI"
                  extensions="ui"/>

        <!-- Language Support -->
        <lang.parserDefinition language="UI"
                               implementationClass="org.jetbrains.plugins.template.ui.parser.UiParserDefinition"/>

        <!-- Syntax Highlighting -->
        <lang.syntaxHighlighterFactory language="UI"
                                       implementationClass="org.jetbrains.plugins.template.ui.highlighting.UiSyntaxHighlighterFactory"/>

        <!-- Color Settings -->
        <colorSettingsPage implementation="org.jetbrains.plugins.template.ui.highlighting.UiColorSettingsPage"/>

        <!-- Code Formatting -->
        <lang.formatter language="UI"
                        implementationClass="org.jetbrains.plugins.template.ui.formatting.UiFormattingModelBuilder"/>

        <!-- Code Style Settings -->
        <codeStyleSettingsProvider implementation="org.jetbrains.plugins.template.ui.formatting.UiCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider implementation="org.jetbrains.plugins.template.ui.formatting.UiLanguageCodeStyleSettingsProvider"/>

        <!-- Code Completion -->
        <completion.contributor language="UI"
                                implementationClass="org.jetbrains.plugins.template.ui.completion.UiCompletionContributor"/>

        <!-- Error Annotations -->
        <annotator language="UI"
                   implementationClass="org.jetbrains.plugins.template.ui.annotator.UiAnnotator"/>

        <!-- Reference Resolution (imports and variables) -->
        <psi.referenceContributor language="UI"
                                  implementation="org.jetbrains.plugins.template.ui.references.UiReferenceContributor"/>

        <!-- Auto-closing brackets and quotes -->
        <typedHandler implementation="org.jetbrains.plugins.template.ui.typing.UiTypedHandler"/>

        <!-- Sample Tool Window (can be removed if not needed) -->
        <toolWindow factoryClass="org.jetbrains.plugins.template.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="org.jetbrains.plugins.template.startup.MyProjectActivity" />
    </extensions>
</idea-plugin>
